#!/bin/bash

# This is a simplified Dockerfile for situations when Docker deployment has issues
FROM python:3.10.12-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt gunicorn

# Copy application code
COPY . .

# Set environment variables
ENV PORT=8080

# Simple command that doesn't rely on environment variable substitution
CMD gunicorn --bind 0.0.0.0:8080 --workers 1 --threads 8 --timeout 120 run:app
