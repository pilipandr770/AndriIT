# Минимальный Dockerfile только с Flask
FROM python:3.10.12-slim

WORKDIR /app

# Устанавливаем только Flask
RUN pip install --no-cache-dir Flask==2.3.7 gunicorn==21.2.0

# Копируем минимальные файлы
COPY run_minimal.py .

# Создаем пользователя
RUN useradd --create-home --shell /bin/bash app && chown -R app:app /app
USER app

EXPOSE 8000

CMD ["gunicorn", "--bind", "0.0.0.0:8000", "run_minimal:app", "--workers", "1", "--timeout", "120"]
